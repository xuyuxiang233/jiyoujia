*
	margin 0
	padding 0
body
	.pages
		width 100%
		.header
			width 1190px
			height 41px
			margin 10px auto
			background-color #f5f5f5
			border 1px solid #e5e5e5
			a
				.sort
					width 100px
					height 39px
					display inline-block
					float left
					font-size 14px
					text-align center
					color #6d6d6d
					line-height 40px
					font-family "黑体"
					padding 0 15px
					&:hover
						color #ff5500
						background-color white
				.section
					width 210px
					height 41px
					float left
					padding 0 12px
					.price
						width 55px
						height 23px
						border 1px solid #e5e5e5
						color #a9a9a9
						margin-top 8px
					span
						color #6d6d6d
					.sureBtn
						width 44px
						height 23px
						color white
						background-color #f82800
						margin-left 10px
						opacity 0
						border-radius 3px
					&:hover
						height 39px
						background-color white
						.sureBtn
							opacity 1
				.paging
					float right
					width 135px
					height 41px
					line-height 39px
					.turing
						list-style none
						.lastPaging
							float left
							display block
							padding 0 15px
							height 39px
						.nowPaging
							float left
							display block
							height 39px
						.nextPaging
							float left
							display block
							padding 0 15px
							height 39px
		.inner
			width 1190px
			margin 0 auto
			padding-top 31px
			.inner_box
				width 222px
				height 356px
				float left
				border 1px solid #ededed
				margin-right 16px
				margin-top 16px
				.imgBox
					display block
					width 220px
					height 220px
				.jiaGe
					height 40px
					font-size 16px
					padding-top 14px
					.howMuch
						display block
						font-weight bold
						color #ff4400
						padding-top 1px
						float left
					.baoYou
						display inline-block
						width 27px
						height 14px
						background-color #ff4400
						color white
						font-size 8px
						text-align center
						padding-top 1px
						margin-left 2px
					span
						color #ff4400
						font-weight bold
						padding-top 1px
						float left
						&:not(.howMuch)
							padding-left 8px
							display inline-block
				.introduce
					height 35px
					width 210px
					padding-left 8px
					font-size 12px
					color rgb(48, 48, 48)
					overflow hidden
					line-height 16px
					font-family Microsoft Yahei
					&:hover
						text-decoration underline
						color #ff4400
				.bottomBox
					width 220px
					height 30px
					position relative
					margin-top 5px
					.USM
						display inline-block
						width 100px
						font-size 12px
						color #888888
						padding-top 5px
						padding-left 9px
						&:hover
							text-decoration underline
							color #ff4400
					.place
						display inline-block
						font-size 12px
						width 80px
						color rgb(48, 48, 48)
						padding-top 5px
						position absolute
						top -0.5px
						left 150px
						padding-right 9px
					.Buy
						display inline-block
						position absolute
						width 66px
						height 20px
						top 27px
						left 79px
						background-color rgb(255, 68, 0)
						border 1px solid rgb(255, 68, 0)
						input
							width 66px
							height 20px
							text-align center
							color white
							padding-bottom 3px
				.footBox
					width 220px
					height 18px
					.icon1
						display inline-block
						width 16px
						height 16px
						float left
						margin-left 5px
					.icon2
						display inline-block
						width 16px
						height 16px
						float left
						margin-left 5px
				&:hover
					border 1px solod #ff4400
					